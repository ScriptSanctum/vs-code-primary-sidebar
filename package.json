{
  "name": "vs-code-extension",
  "displayName": "vs-code-extension",
  "description": "A example of vs code extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "package-explorer",
          "title" : "example",
          "icon": "media/icon.svg"
        },
        {
          "id": "no-package-explorer",
          "title": "no pakcage exp",
          "icon": "media/icon2.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "vs-code-extension.helloWorld",
        "title": "Hello World"
      },
      {
				"command": "calicoColors.addColor2",
				"category": "Calico Colors",
				"title": "Add Color"
			},
			{
				"command": "calicoColors.clearColors2",
				"category": "Calico Colors",
				"title": "Clear Colors",
				"icon": "$(clear-all)"
			}
    ],
    "views": {
      "package-explorer": [
        {
          "id": "views_id",
          "name": "views example",
          "icon": "media/icon.svg"
        }
      ],
      "no-package-explorer":[
        {
					"type": "webview",
					"id": "calicoColors.colorsView2",
          "icon": "media/icon2.svg",
					"name": "Calico Colors"
				}
      ]
    },
    "menus": {
			"view/title": [
				{
					"command": "calicoColors.clearColors2",
					"group": "navigation",
					"when": "view == calicoColors.colorsView2"
				}
			]
		}
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  },
  "packageManager": "yarn@1.22.22"
}
